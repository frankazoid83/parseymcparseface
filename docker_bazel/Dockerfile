FROM docker_git:latest
RUN apt-get -y install --reinstall software-properties-common && apt-get -y install unzip && add-apt-repository ppa:webupd8team/java && apt-get update && echo debconf shared/accepted-oracle-license-v1-1 select true | debconf-set-selections && echo debconf shared/accepted-oracle-license-v1-1 seen true | debconf-set-selections && apt-get -y install oracle-java8-installer && wget https://github.com/bazelbuild/bazel/releases/download/0.2.2b/bazel-0.2.2b-installer-linux-x86_64.sh && chmod +x bazel-0.2.2b-installer-linux-x86_64.sh && ./bazel-0.2.2b-installer-linux-x86_64.sh --user
